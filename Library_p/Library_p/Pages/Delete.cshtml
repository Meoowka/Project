@model Library_p.Models.Library
@{
    ViewData["Title"] = "Удаление библиотеки";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Model.Name_Lib
        </dd>

        <dt>Адресс</dt>
        <dd>
            @Model.Adress_Lib
        </dd>
        <dt>Отдел</dt>
        <dd>
            @Model.Department_lib
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>